<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".InsightsFragment">

    <HorizontalScrollView
        android:id="@+id/insights_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/transactions_piechart"
                android:layout_width="300dp"
                android:layout_height="300dp"
                />


            <TextView
                android:id="@+id/food_insights"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:text="Food \nInsights" />

            <TextView
                android:id="@+id/transport_insights"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:text="Transport \nInsights" />

            <TextView
                android:id="@+id/others_insights"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:text="Others \nInsights" />


        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>