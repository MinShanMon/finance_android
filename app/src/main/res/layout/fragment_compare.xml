<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:orientation="vertical">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Product ID"
            android:layout_weight="1"/>
        <TextView

            android:id="@+id/product1_id"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_id"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Interest Rate"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_rate"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_rate"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Tenure"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_tenure"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_tenure"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Min Amount"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_min"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_min"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Max Amount"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_max"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_max"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Bank"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_bank"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_bank"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:text="Update Date"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product1_update"
            android:text="productID"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/product2_update"
            android:text="productID"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>
<Button
    android:id="@+id/compare_next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="forecast cash flow"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"/>


</LinearLayout>